{
    // Workspaces
    "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-icons": {
			"urgent": "",
			"active": "",
			"default": ""
        },
        "persistent-workspaces": {
            "*": 0
        }       
    },

    // Taskbar
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
           "Alacritty"
        ],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },

    // Hyprland Window
    "hyprland/window": {
      "rewrite": {
        "(.*) ‚Äî Mozilla Firefox": "üåé $1"
      },
        "max-length": 50,
        "separate-outputs": true
    },
    
    // Empty
    "custom/empty": {
        "format": ""
    },

    // Cliphist
    "custom/cliphist": {
        "format": "ÔÉ™",
        "on-click": "cliphist list | ~/.config/rofi/launchers/type-4/CliphistRofi.sh | cliphist decode | wl-copy",
        "on-click-right": "sleep 0.1 && ~/dotfiles/scripts/cliphist.sh d",
        "on-click-middle": "sleep 0.1 && ~/dotfiles/scripts/cliphist.sh w",
        "tooltip-format": "Clipboard Manager"
    },
    
    // Wallpaper
    "custom/wallpaper": {
        "format": "ÔÄæ",
        "on-click": "waypaper",
        "tooltip-format": "Select a wallpaper"
    },
    
    // Pamac
    "custom/settings": {
        "format": "ÔÄì",
        "on-click": "pamac-manager",
        "tooltip-format": "Launch Pamac"
    },
    // Hyprland Config
    "custom/hyprlandconfig": {
	"format": "Û∞∏ä",
        "on-click": "kitty nvim ~/.config/hypr/hyprland.conf",
        "tooltip-format": "Launch hyprland.conf"
    },
    // Waybar Config
    "custom/waybarconfig": {
	"format": "Û∞Å±",
        "on-click": "thunar ~/.config/waybar",
        "tooltip-format": "Launch Waybar Config Folder"
    },

    // Filemanager Launcher
    "custom/filemanager": {
        "format": "ÔÅº",
        "on-click": "thunar",
        "tooltip-format": "Open the filemanager"
    },

    // Browser Launcher
    "custom/browser": {
        "format": "Ôâ©",
        "on-click": "firefox",
        "tooltip-format": "Open the browser"
    },

    // Wofi Application Launcher
    "custom/appmenu": {
        // START APPS LABEL
        "format": "Û∞£á",
        // END APPS LABEL
        "on-click": "sleep 0.2;~/.config/rofi/launchers/type-4/launcher.sh",
        "tooltip-format": "Left: Open the application launcher"
    },

    // Wofi Application Launcher
    "custom/appmenuicon": {
        "format": "ÔÄï ",
        "on-click": "rofi -show drun -replace",
        "on-click-right": "~/dotfiles/hypr/scripts/keybindings.sh",
        "tooltip-format": "Open the application launcher\nRight: Show all keybindings"
    },    

    // Power Menu
    "custom/exit": {
        "format": "ÔÄë",
        "on-click": "wlogout",
        "tooltip-format": "Power Menu"
    },

    // Hypridle inhibitor
    "custom/hypridle": {
        "format": "ÔÄ£",
        "return-type": "json",
        "escape": true,
        "exec-on-event": true,
        "interval": 60,
        "exec": "~/dotfiles/hypr/scripts/hypridle.sh status",
        "on-click": "~/dotfiles/hypr/scripts/hypridle.sh toggle",
        "on-click-right": "hyprlock"
    },

    // Keyboard State
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },

    // System tray
    "tray": {
        "icon-size": 16,
        "spacing": 10
    },
    
    // Notifications
     "custom/notification": {
    "tooltip": false,
    "format": "{} {icon}",
    "format-icons": {
      "notification": "ÔÇ¢",
      "none": "ÔÇ¢",
      "dnd-notification": "Ôá∑",
      "dnd-none": "Ôá∑",
      "inhibited-notification": "ÔÇ¢",
      "inhibited-none": "ÔÇ¢",
      "dnd-inhibited-notification": "Ôá∑",
      "dnd-inhibited-none": "Ôá∑"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
    },

    // Clock
    "clock": {
        "format": "{:%H:%M ¬∑ %a, %m/%d}",
        // "timezone": "America/Los_Angeles",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        // START CLOCK FORMAT
         "format-alt": "{:%H:%M}"
        // END CLOCK FORMAT
    },

    // System
    "custom/system": {
        "format": "Û∞çπ",
        "tooltip": false
    },

    // CPU
    "cpu": {
	"interval": 3,
        "format": "Ôãõ {usage}% ",
        "on-click": "kitty htop"
    },

    // Memory
    "memory": {
	"interval": 3,
        "format": "ÔÇÄ {}% ",
        "on-click": "kitty htop"
    },

    // Harddisc space used
    "disk": {
        "interval": 30,
        "format": "ÔáÄ {used}/{total} ",
        "path": "/",
        "on-click": "kitty htop",
    }, 

    "hyprland/language": {
        "format": "/ K {short}"
    },

    // Group Hardware
    "group/hardware": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": false
        },        
        "modules": [
            "custom/system",
            "disk",
            "cpu",
            "memory",
        ]
    },
    
    // Group Settings
    "group/links": {
        "orientation": "horizontal",
        "modules": [
            "custom/chatgpt",
            "custom/empty"
        ]
    },

    // Group Settings
    "group/settings": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": true
        },            
        "modules": [
            "custom/settings",
            "custom/wallpaper",
	          "custom/hyprlandconfig",
	          "custom/waybarconfig",
        ]
    },

    // Group Quicklinks
    "group/quicklinks": {
        "orientation": "horizontal",
        "modules": [
            "custom/browser",
            "custom/filemanager",
         ]
    },
    //Backlight
    "backlight": {
      "device": "intel_backlight",
      "format": "{icon} {percent}%",
      "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
      "on-scroll-up": "brightnessctl set 1%+",
      "on-scroll-down": "brightnessctl set 1%-"
    },
    // Network
    "network": {
        "format": "{ifname}",
        "format-wifi": "{icon} {essid} [Û∞æÜ {bandwidthDownBytes:>}]",
        "format-ethernet": "Ôûñ  {ifname}",
